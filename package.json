{
  "name": "lenaruppert.de",
  "description": "Lenaruppert website",
  "version": "1.0.0-beta",
  "author": "Florian Hirsch",
  "license": "UNLICENSED",
  "private": true,
  "main": "n/a",
  "scripts": {
    "build": "yarn run build:cms && yarn run build:site",
    "build:site": "gatsby build",
    "build:cms": "cd cms && yarn && yarn run build",
    "develop": "gatsby develop",
    "serve": "gatsby serve",
    "_format": "prettier --trailing-comma es5 --no-semi --single-quote --write",
    "format": "yarn run format:src && yarn run format:cms",
    "format:src": "yarn run _format \"src/**/*.{js,jsx,ts,tsx}\"",
    "format:cms": "yarn run _format \"cms/**/*.{js,jsx,ts,tsx}\"",
    "graphql-types": "gql-gen --url http://localhost:8000/___graphql --template typescript --out ./src/graphql-types.d.ts",
    "lint": "yarn run tslint -c tslint.json \"src/**/*.{ts,tsx}\" --fix",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*": [
      "yarn run lint --",
      "yarn run format --",
      "git add"
    ]
  },
  "dependencies": {
    "@types/node": "^9.6.5",
    "@types/react": "^16.2.0",
    "@types/react-dom": "^16.0.5",
    "@types/react-helmet": "^5.0.5",
    "bulma": "^0.6.0",
    "gatsby": "^1.9.213",
    "gatsby-link": "^1.6.37",
    "gatsby-plugin-netlify-cms": "^1.0.9",
    "gatsby-plugin-react-helmet": "^2.0.5",
    "gatsby-plugin-sass": "^1.0.17",
    "gatsby-plugin-sharp": "^1.6.34",
    "gatsby-plugin-typescript": "^1.4.19",
    "gatsby-plugin-typography": "^1.7.18",
    "gatsby-remark-images": "^1.5.50",
    "gatsby-source-filesystem": "^1.5.23",
    "gatsby-transformer-remark": "^1.7.33",
    "gatsby-transformer-sharp": "^1.6.21",
    "graphql-code-generator": "^0.8.21",
    "lodash": "^4.17.5",
    "lodash-webpack-plugin": "^0.11.4",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-load-script": "0.0.6",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1",
    "typography-theme-de-young": "^0.16.9"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "prettier": "^1.7.4"
  }
}
